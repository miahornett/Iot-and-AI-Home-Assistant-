#include <WiFi.h>
#include <PubSubClient.h>

// WiFi & MQTT configuation 
const char* ssid = "YOUR_WIFI_SSID";
const char* password = "YOUR_WIFI_PASSWORD";
const char* mqtt_server = "IP_ADDRESS_OF_YOUR_RASPBERRY_PI";
const int mqtt_port = 1883;

// MQTT topic
const char* waterTopic = "smart-home/bathroom/water"; 

// Sensor pin
const int waterSensorPin = 2; 

// Sensor state variable
bool lastWaterState = false;

// Calibration 
// Change this value after testing
const int WATER_THRESHOLD = 2500; 

WiFiClient espClient;
PubSubClient client(espClient);

void setup_wifi() {
  delay(10);
  Serial.println();
  Serial.print("Connecting to ");
  Serial.println(ssid);
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("\nWiFi connected");
  Serial.println("IP address: ");
  Serial.println(WiFi.localIP());
}

void reconnect() {
  while (!client.connected()) {
    Serial.print("Attempting MQTT connection...");
    // A unique ID for this specific sensor
    String clientId = "ESP32_WaterSensor_Bath"; 
    if (client.connect(clientId.c_str())) {
      Serial.println("connected");
    } else {
      Serial.print("failed, rc=");
      Serial.print(client.state());
      Serial.println(" try again in 5 seconds");
      delay(5000);
    }
  }
}

void setup() {
  Serial.begin(115200);
  
  // Set up water sensor pin
  // pinMode is not strictly required for analogRead, 
  // but it's good practice to set it as an input.
  pinMode(waterSensorPin, INPUT);
  
  setup_wifi();
  client.setServer(mqtt_server, mqtt_port);
}

void loop() {
  if (!client.connected()) {
    reconnect();
  }
  client.loop();


  
  // Read the analog value 
  int waterSensorValue = analogRead(waterSensorPin);

  // Calibration
  Serial.print("Water Sensor Value: ");
  Serial.println(waterSensorValue);
 

  // Value above  threshold
  bool currentWaterState = (waterSensorValue > WATER_THRESHOLD);

  // Publish on state change
  if (currentWaterState != lastWaterState) {
    if (currentWaterState == true) {
      Serial.println("LEAK DETECTED! Publishing to MQTT...");
      client.publish(waterTopic, "LEAK_DETECTED");
    } else {
      Serial.println("Water CLEAR. Publishing to MQTT...");
      client.publish(waterTopic, "CLEAR");
    }
    // Update the state
    lastWaterState = currentWaterState;
  }
  
  //Delay for stability 
  delay(250); 
}
